<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.4.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_4_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.4.0+</version>
	</compatibility>
	<theme id="deltares-fews-theme" name="Deltares FEWS Theme">
		<template-extension>ftl</template-extension>
		<settings>
			<setting configurable="true" key="google-tag-id" type="text" value="" />
			<setting configurable="true" key="page-footer-webcontent-id" type="text" value="" />
			<setting configurable="true" key="shopping-cart" type="checkbox" value="false" />
			<setting configurable="true" key="show-cookies" type="checkbox" value="true" />
		</settings>
		<color-scheme id="01" name="White background">
			<default-cs>true</default-cs>
			<css-class>regular-color-scheme</css-class>
			<color-scheme-images-path>
				${images-path}/color_schemes/${css-class}
			</color-scheme-images-path>
		</color-scheme>
		<color-scheme id="02" name="Blue background">
			<css-class>blue-color-scheme</css-class>
			<color-scheme-images-path>
				${images-path}/color_schemes/${css-class}
			</color-scheme-images-path>
		</color-scheme>
		<portlet-decorator id="barebone" name="Barebone">
			<default-portlet-decorator>true</default-portlet-decorator>
			<portlet-decorator-css-class>portlet-barebone</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="borderless" name="Borderless">
			<portlet-decorator-css-class>portlet-borderless</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="decorate" name="Decorate">
			<portlet-decorator-css-class>portlet-decorate</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="noTitle" name="Without title">
			<portlet-decorator-css-class>portlet-sans-title</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="noTitleBlue" name="Without title blue background">
			<portlet-decorator-css-class>portlet-sans-title blue-background</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="blueContainer" name="With blue background">
			<portlet-decorator-css-class>blue-background</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="fullWidth" name="Full width">
			<portlet-decorator-css-class>portlet-full-width</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="fullWidthNoTitle" name="Full width no title">
			<portlet-decorator-css-class>portlet-full-width-no-title</portlet-decorator-css-class>
		</portlet-decorator>
	</theme>
</look-and-feel>